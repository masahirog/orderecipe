                  li.menu_li = link_to "試食コメント",weekly_tastings_path(date:@today)
                  li.menu_li = link_to "ログアウト", destroy_user_session_path, :method => :delete
              - elsif current_user.id == 69
                ul.nav.navbar-nav
                  li.dropdown
                    a.dropdown-toggle href="#" data-toggle="dropdown" role="button"
                      |店舗選択
                      span.caret
                    ul.dropdown-menu role="menu"
                      - @stores.each do |store|
                        li = link_to store.name,crew_store_path(store)
  
                  / li.menu_li = link_to "進捗ボード",tasks_path(group_id:29)
                  li.dropdown
                    a.dropdown-toggle href="#" data-toggle="dropdown" role="button"
                      |レシピ
                      span.caret
                    ul.dropdown-menu role="menu" style='width:250px;'
                      li = link_to "商品一覧",products_path
                      li = link_to "メニュー",menus_path
                      li = link_to "食材・資材",materials_path
                      li = link_to "仕入先",vendors_path
                  li.dropdown
                    a.dropdown-toggle href="#" data-toggle="dropdown" role="button"
                      |設定
                      span.caret
                    ul.dropdown-menu role="menu"
                      li = link_to "スタッフ一覧",staffs_path
                      li = link_to "ブランド一覧",brands_path
                      li = link_to "お皿の設定",containers_path
                      li = link_to "ログアウト", destroy_user_session_path, :method => :delete
              - else
                ul.nav.navbar-nav
                  li.menu_li = link_to "ログアウト", destroy_user_session_path, :method => :delete


    .all_body
      - flash.each do |name, msg|
        .col-md-12 class="alert alert-#{name}" role="alert"
          = content_tag :div, raw(msg), :id => name

      = yield
