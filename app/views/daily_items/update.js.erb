<% if @daily_item.attribute_before_last_save(:date) == @daily_item.date %>
	$(".tr_<%= @daily_item.id %> ").replaceWith("<%= escape_javascript(render partial: 'tr', locals: {daily_item:@daily_item,purpose:@daily_item.purpose}) %>");
<% else %>
	$(".tr_<%= @daily_item.id %> ").replaceWith("<%= escape_javascript(render partial: 'tr', locals: {daily_item:@daily_item,purpose:@daily_item.purpose}) %>");
	$(".tr_<%= @daily_item.id %> ").css('background-color','silver');
<% end %>
$('.modal').modal('hide');
