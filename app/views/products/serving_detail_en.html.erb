<head>
  <title>Order</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/css/select2.min.css" rel="stylesheet" />
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/js/select2.min.js"></script>
</head>
<body>
  <div class="all_body">
    <div class="col-xs-12 col-md-7 form-group" style="float:left;">
      <%= form_tag "/products/serving_detail_en", class:"form-inline" do %>
        <div class="bento_id_kensaku_en col-md-2">
          <%= text_field_tag :bento_id, params[:bento_id], class:"bento_id_search_en form-control",style:"width:100%", placeholder:"bentoID"%>
        </div>
        <div class="select col-md-6">
          <%= select_tag(:id, options_from_collection_for_select(@products,:id,:name),include_blank: true,class:"input_select_product_en col-md-8") %>
        </div>
        <div class="kensaku col-md-4">
        　<%= submit_tag "検索" ,class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-5 form-inline" style="float:left;">
      <input type="number" id="amount_number_input" class="form-control text-right" placeholder="食数を入力">
      <input id="amount_calculation" type="button" onclick="" value="計算" class="btn btn-primary">
      <a class="pull-right" id="google_translate_element"></a><script type="text/javascript">
      function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'ja', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
      }
      </script><script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    </div>
    <p></p>

    <div class="amount_number col-xs-12 col-md-12">

    </div>

   <div class="col-md-12" style="margin-top:20px;">
     <label class="col-md-2">bentoID</label>
     <label class="col-md-3">弁当名</label>
     <label class="col-md-2">調理カテゴリー</label>
     <label class="col-md-3">弁当種類</label>
     <label class="col-md-2">原価価格</label>
   </div>
   <li class="list-group-item col-md-12">
      <div class="col-md-2"><%= @product.bento_id %></div>
      <div class="col-md-3"><%= @product.name %></div>
      <div class="col-md-2"><%= @product.cook_category %></div>
      <div class="col-md-3"><%= @product.product_type %></div>
      <div class="text-right col-md-2"><%= @product.cost_price %>円</div>
   </li>
    <div class="col-md-12" style="margin-top:20px;">
      <label class="col-md-2">メニュー名</label>
      <label class="col-md-2">調理メモ</label>
      <div class="col-md-8">
        <label class="col-md-2">材料名</label>
        <label class="col-md-1">1人分</label>
        <label class="calculate_amount_used_th col-md-3 text-center" style="font-size:20px;font-weight:bold; "></label>
        <label class="col-md-5">仕込み</label>
      </div>
    </div>
    <ul class="list-group col-md-12" style="list-style:none;">
      <% @menus.each do |menu| %>
      <li class="product_menus col-md-12 list-group-item" style="padding:3;">
        <div class="col-md-2"><%= menu.name %></div>
        <div class="col-md-2"><%= simple_format(menu.recipe) %></div>
        <% i = 1 %>
        <% u = menu.materials.length %>
          <ul class="col-md-8 menu_materials" style="list-style:none;padding:0;">
          <% menu.menu_materials.each do |mm|%>
              <li class="menu_materials col-md-12" style="padding:0;">
                <div class="col-md-2" style="padding:2px 2px;"><%= mm.material.name %></div>
                <div class="col-md-1 original_amount_used form-inline text-right" style="padding:0;">
                  <div class="original_amount_used_value text-right form-group"><%= mm.amount_used %></div>
                  <div class="form-group"><%= mm.material.calculated_unit %></div>
                  <div class="calculated_value" style="display:none;"><%= mm.material.calculated_value %></div>
                  <div class="order_unit" style="display:none;"><%= mm.material.order_unit %></div>
                </div>
                <div class="calculated_unit col-md-2 form-inline text-right">
                  <div class="calculate_amount_used form-group" style="display:none;font-weight:bold; font-size:20px;"></div>
                  <div class="form-group" style="display:none;font-weight:bold;"><%= mm.material.calculated_unit %></div>
                </div>
                <div class="cal_val_order_unit col-md-1 form-inline" style="padding:0;">
                  <div class="calculate_amount_used form-group"></div>
                  <div class="form-group" style="display:none;padding:0;"><%= mm.material.order_unit %></div>
                </div>
                <div class="col-md-2" style="padding:0;"><%= mm.post %></div>
                <div class="col-md-3" style="padding:0;"><%= mm.preparation %></div>
        <% if i == menu.materials.length  %>
      </li></ul>
        <% else %>
        </li>
        <% i += 1 %>
            <% end %>
          <% end %>
         <% end %>
     </ul>
    </div>
</body>
