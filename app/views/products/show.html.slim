ul.list-group[style="list-style-type:none;"]
  - @product.product_menus.each do |pm|
    li.first_tr.table_tr.col-md-12.list-group-item[style="padding:5px;"]
      .first_tr_td.col-md-2
        div = link_to pm.menu.name, edit_menu_path(pm.menu)
        / div = "#{pm.menu.menu_materials.sum(:calorie).round(2)}kcal"
        div = image_tag pm.menu.image.to_s ,class:"text-center img-responsive center-block",style:'max-height:450px;'
      .col-md-1
        = pm.menu.cost_price
      .first_tr_td.col-md-2
        = text_url_to_link(simple_format(h(pm.menu.cook_the_day_before))).html_safe
      .first_tr_td.col-md-2
        = text_url_to_link(simple_format(h(pm.menu.cook_on_the_day))).html_safe
      - i = 1
      - u = pm.menu.materials.length
      .first_tr_td.col-md-5
        ul.col-md-12[style="list-style-type: none;padding:0;"]
          - pm.menu.menu_materials.each do |mm|
            li.menu_materials.col-md-12
              .col-md-2
                = "◯" if mm.source_flag == true
              .col-md-4[style="padding:0;"]
                = link_to mm.material.name, edit_material_path(mm.material)
              .original_amount_used.text-right.col-md-2
                = mm.amount_used
                = mm.material.recipe_unit
              .original_cost_price.text-right.col-md-1[style="padding-left:0"]
                = (mm.amount_used * mm.material.cost_price).round(1)
              .col-md-3[style="padding:0;"]
                = mm.preparation
