  thead
    tr
      th 大皿盛りつけ手順
      th
  tbody
    - @product.product_ozara_serving_informations.each_with_index do |posi,i|
      tr
        td
          span style='font-weight:bold;' = "#{i+1}. "
          = posi.content
        td
          = link_to posi.image.to_s, "data-lightbox" => posi.image.to_s do
            = image_tag posi.image.to_s ,class:"text-center img-responsive center-block",style:'max-height:150px;'



table.table
  thead
    tr
      th.col-md-2 製造側写真
      th.col-md-2 大皿写真
      th.col-md-2 ポップ
      th.col-md-2 1人前写真
      th.col-md-2 1人前盛り
  tbody
    tr
      td
        = link_to @product.image.to_s, "data-lightbox" => @product.image.to_s do
          = image_tag @product.image.to_s ,class:"text-center img-responsive center-block",style:'max-height:150px;'
      td
        = link_to @product.display_image.to_s, "data-lightbox" => @product.display_image.to_s do
          = image_tag @product.display_image.to_s ,class:"text-center img-responsive center-block",style:'max-height:150px;'
      td
        - if @product.product_pops.present?
          object data="#{@product.product_pops[0].image.to_s}" type="application/pdf"
          = link_to "ダウンロード", download_products_path(:file_name => @product.product_pops[0].image,:key => @product.product_pops[0].image.path, :type => 'pdf'),target:'_blank',class:'col-md-12'
      td
        = link_to @product.image_for_one_person.to_s, "data-lightbox" => @product.image_for_one_person.to_s do
          = image_tag @product.image_for_one_person.to_s ,class:"text-center img-responsive center-block",style:'max-height:150px;'

      td = text_url_to_link(simple_format(h(@product.serving_infomation))).html_safe
