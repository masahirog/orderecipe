    tr
      th 商品名
      th.col-md-6 商品紹介
      th 販売価格
      th 原価価格
      th 原価率

  tbody
    tr
      td = @product.name
      td = text_url_to_link(simple_format(h(@product.description))).html_safe
      td = "#{@product.sell_price} 円"
      td = "#{@product.cost_price} 円"
      td = "#{((@product.cost_price/@product.sell_price)*100).round(1)}%"
