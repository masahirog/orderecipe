 <table class="table">
   <thead>
     <tr class="active">
       <th>弁当名</th>
       <th>調理カテゴリー</th>
       <th>弁当種類</th>
       <th>販売価格</th>
       <th>原価価格</th>
       <th>説明文</th>
       <th>内容物</th>
     </tr>
   </thead>
   <tbody>
     <tr>
       <td><%= @product.name %></td>
       <td><%= @product.cook_category %></td>
       <td> <%= @product.product_type %></td>
       <td class="text-right"> <%= @product.sell_price %>円</td>
       <td class="text-right"><%= @product.cost_price %>円</td>
       <td><%= truncate(@product.description,length:8) %></td>
       <td><%= truncate(@product.contents,length:8) %></td>
     </tr>
   </tbody>
 </table>
 <br>
 <table class="table">
   <thead>
     <tr class="active">
       <th>メニュー名</th>
       <th>カテゴリー</th>
       <th>メニュー原価</th>
       <th>レシピ</th>
       <th>盛り付けメモ</th>
       <th>食材資材名</th>
       <th colspan="2">使用量</th>
       <th colspan="2" class="calculate_amount_used_th" style="display: none;">使用量</th>

     </tr>
   </thead>
    <tbody>
      <% @menus.each do |menu| %>
      <tr  class="first_tr table_tr">
        <td class="menu_materials_length" style="display:none;"><%= menu.materials.length %></td>
       <td class="first_tr_td"><%= link_to "#{menu.name}", "/menus/#{menu.id}/edit", method: :get %></td>
       <td class="first_tr_td"><%= menu.category %></td>
       <td class="text-right first_tr_td"><%= menu.cost_price %>円</td>
       <td class="first_tr_td"><%= menu.recipe %></td>
       <td class="first_tr_td"><%= menu.serving_memo %></td>
       <% i = 1 %>
       <% u = menu.materials.length %>
       <% menu.materials.zip(menu.menu_materials).each do |material, menu_material|%>
       <td><%= link_to material.name, "/materials/#{material.id}/edit", method: :get %></td>
       <td class="original_amount_used text-right"><%= menu_material.amount_used %></td>
       <td><%= material.calculated_unit %></td>
       <td class="calculate_amount_used" style="display: none;"></td>
       <td class="calculate_unit" style="display: none;"><%= material.calculated_unit %></td>
        </tr>
        <% if i == menu.materials.length  %>
          <% else %>
            <tr class="table_tr">
            <!-- <td></td> -->
            <!-- <td></td>
            <td></td>
            <td></td>
            <td></td> -->
            <% i += 1 %>
        <% end %>
      <% end %>
     <% end %>
   </tbody>
 </table>

