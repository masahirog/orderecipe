  <head>
    <title>Order</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/css/select2.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/js/select2.min.js"></script>
  </head>
  <body>
    <div class="all_body">

    <div class="col-xs-11 col-md-4 form-inline">
     <input type="number" id="amount_number_input" class="form-control text-right" placeholder="食数を入力">
      <input id="amount_calculation" type="button" onclick="" value="計算" class="btn btn-primary">
    </div>
    <p></p>

    <div class="amount_number col-xs-12 col-md-12">

    </div>
    <br>
    <br>
    <table class="table">
       <thead>
         <tr class="active">
           <th>弁当名</th>
           <th>調理カテゴリー</th>
           <th>弁当種類</th>
           <th>原価価格</th>
         </tr>
       </thead>
       <tbody>
         <tr>
           <td><%= @product.name %></td>
           <td><%= @product.cook_category %></td>
           <td><%= @product.product_type %></td>
           <td class="text-right"><%= @product.cost_price %>円</td>
         </tr>
       </tbody>
    </table>
      <div class="col-md-7">
        <div class="col-md-4">盛り付けメモ</div>
        <div class="col-md-3">材料名</div>
        <div class="col-md-3">使用量</div>
        <div class="calculate_amount_used_th col-md-2" style="display: none; font-size:20px;"></div>
      </div>
      <ul class="list-group col-md-7" style="list-style:none;">
        <% @menus.each do |menu| %>
        <li class="product_menus col-md-12 list-group-item">
          <div class="col-md-3"><%= menu.serving_memo %></div>
          <% i = 1 %>
          <% u = menu.materials.length %>
            <ul class="col-md-9 menu_materials" style="list-style:none;">
            <% menu.menu_materials.each do |mm|%>
                <li class="menu_materials col-md-12">
                  <div class="col-md-6"><%= mm.material.name %></div>
                  <div class="col-md-3 original_amount_used form-inline">
                    <div class="original_amount_used_value text-right form-group"><%= mm.amount_used %></div>
                    <div class="form-group"><%= mm.material.calculated_unit %></div>
                  </div>
                  <div class="calculated_unit col-md-3 form-inline text-right" style="display:none;">
                    <div class="calculate_amount_used form-group" style="font-weight:bold; font-size:20px;"></div>
                    <div class="form-group" style="font-weight:bold;"><%= mm.material.calculated_unit %></div>
                  </div>
      <% if i == menu.materials.length  %>
    </li></ul>
      <% else %>
      </li>
      <% i += 1 %>
          <% end %>
        <% end %>
       <% end %>
   </ul>
      <div class ="product_image_l col-xs-12 col-md-5">
        <%= image_tag @product.product_image.to_s, class:"img-responsive" %>
      </div>
      </div>
 </body>
