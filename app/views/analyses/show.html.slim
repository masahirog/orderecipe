= link_to '削除',bulk_delete_analysis_products_analyses_path(analysis_id:@analysis.id), {method: :post, data: { confirm: '削除しますか？' },class:'btn btn-sm btn-default'}
= link_to '販売データ反映', smaregi_trading_history_totalling_analyses_path(analysis: {analysis_id:@analysis.id}), method: :post,class:'btn btn-sm btn-default'
table.table
  thead
    tr style="background-color:steelblue;color:white;"
      th Orderecipe 献立
      th OR単価
      th スマレジ商品
      th スマレジ単価
      th 在庫
      th 販売数
      th 販売金額
      th 廃棄数
      th 廃棄金額

  tbody
    - @store_daily_menu_details.each do |sdmd|
      - ap = @or_ari_analysis_products[sdmd.product_id]
      tr
        td = link_to sdmd.product.name,sdmd.product
        td = sdmd.product.sell_price
        td = ap.smaregi_shohin_name if ap.present?
          / - if ap.product_id.present?
          /   = link_to ap.smaregi_shohin_name,ap.product,target:'_blank'
          / - else
          /   = ap.smaregi_shohin_name
        td = ap.smaregi_shohintanka if ap.present?
        td = ap.manufacturing_number if ap.present?
        td = ap.sales_number if ap.present?
        td = ap.total_sales_amount if ap.present?
        td = ap.loss_number if ap.present?
        td = ap.loss_amount if ap.present?
    tr style="background-color:steelblue;color:white;"
      th Orderecipe 献立外 メニュー
      th OR単価
      th スマレジ商品
      th スマレジ単価
      th 在庫
      th 販売数
      th 販売金額
      th 廃棄数
      th 廃棄金額

    - @or_nashi_analysis_products.each do |ap|
      tr style="background-color:whitesmoke;"
        td = link_to ap.product.name,ap.product,target:'_blank' if ap.product_id
        td = ap.product.sell_price if ap.product_id
        td
          = ap.smaregi_shohin_name
        td = ap.smaregi_shohintanka
        td = ap.manufacturing_number
        td = ap.sales_number
        td = ap.total_sales_amount
        td = ap.loss_number
        td = ap.loss_amount
table.table
  thead
    tr
      th
        = link_to "売上履歴データ一覧",date_datas_smaregi_trading_histories_path(date:@analysis.date)
        button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#sampleModal" データアップロード
        #sampleModal.modal.fade tabindex="-1"
          = form_tag upload_salesdatas_smaregi_trading_histories_path, multipart: true do
            .modal-dialog
              .modal-content
                .modal-header
                  h4.modal-title 新規作成
                .modal-body
                  = hidden_field_tag :smaregi_store_id,@analysis.store.smaregi_store_id
                  = hidden_field_tag :analysis_id,@analysis.id
                  = hidden_field_tag :date,@analysis.date
                  = file_field_tag :file,class:'form-control',style:'padding:10px;height:100%;'
                .modal-footer
                  button.modal-close.btn.btn-default type="button" data-dismiss="modal" 閉じる
                  = submit_tag "アップロード",class:'btn btn-primary'

      th 合計売上
      th 人件費
      th ロス
      th = link_to '削除',bulk_delete_smaregi_trading_histories_path(analysis_id:@analysis.id), {method: :post, data: { confirm: '削除しますか？' }}

  tbody
    - @smaregi_trading_histories.each do |sth|
      tr
        td = sth.torihiki_nichiji
        td = sth.nebikigokei
        td
        td

= paginate @smaregi_trading_histories

