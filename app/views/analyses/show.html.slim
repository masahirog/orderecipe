p#notice = notice
= link_to '売上履歴削除',bulk_delete_smaregi_trading_histories_path(analysis_id:@analysis.id), {method: :post, data: { confirm: '削除しますか？' },class:'btn btn-danger btn-sm pull-right'}

table.table
  thead
    tr
      th 日付
      th 店舗名
      th 合計売上
      th ロス
      th ロス率
      th 人件費
      th 営業利益

  tbody
    tr
      td = @analysis.date.strftime("%-m月%-d日(#{%w(日 月 火 水 木 金 土)[@analysis.date.wday]})")
      td = @analysis.store.name
      td = "#{@analysis.sales_amount.to_s(:delimited)}円" if @analysis.sales_amount
      td = "#{@analysis.loss_amount.to_s(:delimited)}円" if @analysis.loss_amount
      td = "#{((@analysis.loss_amount.to_f/@analysis.sales_amount)*100).round(1)}%" if @analysis.sales_amount && @analysis.loss_amount
      td
      td
