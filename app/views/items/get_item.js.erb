$('.item_reduce_tax_flag').val(<%= @item.reduced_tax_flag %>);
$('.unit_input').val("<%= @item.unit %>");

if (<%= @item.reduced_tax_flag == 1 %>) {
	$('.tax_rate_span').text('8%');
}else{
	$('.tax_rate_span').text('10%');
};
if (<%= @item.tax_including_purchase_price.present? %>) {
	$("#<%= @target_id %>").find('.tax_including_purchase_price_input').val(<%= @item.tax_including_purchase_price %>);
	$("#<%= @target_id %>").find('.purchase_price_input').val(<%= @item.purchase_price %>);
}else{
	$("#<%= @target_id %>").find('.tax_including_purchase_price_input').val(0);
	$("#<%= @target_id %>").find('.purchase_price_input').val(0);
};

if (<%= @item.sell_price.present? %>) {
	$("#<%= @target_id %>").find('.tax_including_sell_price').val(<%= @item.tax_including_sell_price %>);
	$("#<%= @target_id %>").find('.sell_price').val(<%= @item.sell_price %>);
}else{
	$("#<%= @target_id %>").find('.tax_including_sell_price').val(0);
	$("#<%= @target_id %>").find('.sell_price').val(0);
};
