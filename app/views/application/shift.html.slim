.clearfix style='padding:5px 0;'
  = form_tag shift_path(), :method => 'get' do
    = select_tag :month,options_for_select(@months,params[:month]), class:"form-control",style:'float:left;width:100px;margin-right:10px;'
    / = select_tag :kubun,options_for_select([['くるめし',0],['べじはん',1]],params[:kubun]), class:"form-control",style:'width:100px;float:left;'
    = submit_tag "表示" ,class:"btn btn-primary",style:'float:left;'

  = link_to "シフト提出",'https://forms.gle/fGPNLsYL3zMsoEMM8',target:'_blank',class:'btn btn-primary pull-right',style:''

.fixed-box-yoko-tate
  table.shift_table
    thead
      tr
        - @tables[0].each_with_index do |data,ind|
          - if ind == 0
            th.fixed01 style="z-index:10;width:100px;" =data
          - elsif ind < 3
            th.fixed01 style="width:60px;" =data
          - else
            th.fixed02 =data
    tbody
      - @tables[1..-1].each_with_index do |data,tr_i|
        tr
          - data.each_with_index do |td,index|
            - if index == 0
              td.fixed02 = td
            - else
              td = td
    thead
      tr
        - @tables[0].each_with_index do |data,ind|
          - if ind == 0
            th.fixed03 style='z-index:10' =data
          - elsif ind < 3
            th.fixed03 =data
          - else
            th.fixed04 =data


css:
  /* 列1,2行目 */
  .shift_table tr td:nth-of-type(1){
    color:black;
  }
  .shift_table tr td:nth-of-type(2){
    color:black;
  }
  .shift_table tr:nth-child(odd) td {
    background-color: #fff;
    color:silver;
  }
  .shift_table tr:nth-child(even) td {
    background-color: #EAF6FD;
    font-weight:bold;
  }
  div.fixed-box-yoko-tate {
    width:100%;
    height:600px;
    background: #fff;
    overflow:auto;
  }
  table.shift_table {
    width: 1000px;
    border-collapse: collapse;
    border: 1px solid #ccc;
    table-layout: fixed;
  }
  table.shift_table th, table.shift_table td {
    padding:3px 5px;
    vertical-align: middle;
    border: 1px solid #ccc;
    width:80px;
  }

  /* 最上行固定 */
  table.shift_table .fixed01,
  table.shift_table .fixed02 {
    position: sticky;
    top: 0;
    left: 0;
    background-color: #337ab7;
    color:white;
  }
  table.shift_table .fixed01:before,
  table.shift_table .fixed02:before {
    content: "";
    position: absolute;
    top: -1px;
    left: -1px;
    width: 100%;
    height: 100%;
  }
  table.shift_table .fixed01 {
    z-index: 2;
  }
  table.shift_table .fixed02 {
    z-index: 1;
  }

  /* 最下行固定 */
  table.shift_table .fixed03,
  table.shift_table .fixed04 {
    position: sticky;
    bottom: 0;
    left: 0;
    background-color: #337ab7;
    color:white;
  }
  table.shift_table .fixed03:before,
  table.shift_table .fixed04:before {
    content: "";
    position: absolute;
    top: -1px;
    left: -1px;
    width: 100%;
    height: 100%;
    border: 1px solid #ccc;
  }
  table.shift_table .fixed03 {
    z-index: 2;
  }
  table.shift_table .fixed04 {
    z-index: 1;
  }
