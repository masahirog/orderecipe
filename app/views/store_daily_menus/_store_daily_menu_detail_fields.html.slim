- if f.object.id.present?
  -class_name = "tr_#{f.object.product_id}"
- else
  -class_name = ''

tr.nested-fields.item.daily_menu_detail_tr class=class_name
  td
    = link_to_remove_association '削除', f, class: 'btn btn-danger btn-sm'

  - if f.object.id.present?
    td.bejihan_sozai_flag_td
      = "true" if f.object.product.bejihan_sozai_flag == true
    td.sell_price
      = f.object.product.sell_price
    td
      = f.object.product.name
  - else
    td.bejihan_sozai_flag_td
    td.sell_price
    td
      = f.collection_select :product_id, @dmd_products, :id, :name, {include_blank:true},class:'form-control input_select_product'

  td
    = f.number_field :number, class: 'form-control manufacturing_number input_number', min: 0
    - if f.object.id.present? && f.object.product.carryover_able_flag == true
      td
        = f.number_field :add_stocked, class: 'form-control add_stocked_input input_number', min: 0
      td
        = f.number_field :use_stock, class: 'form-control use_stock_input input_number', min: 0
    - else
      td
        = f.hidden_field :add_stocked, class: 'form-control add_stocked_input', min: 0
      td
        = f.hidden_field :use_stock, class: 'form-control use_stock_input', min: 0
  td
    = f.number_field :actual_inventory, class: 'form-control actual_inventory_input', min: 0,readonly:true
  td
    = f.check_box :sold_out_flag, class: "form-control"
