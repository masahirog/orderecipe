<% if @task.status == "yet" %>
  $("<%= @class_name %>").css('background-color','#ffffff');
<% elsif  @task.status == "done" %>
  $("<%= @class_name %>").css('background-color','#d3d3d3');
  $("<%= @class_name %>").find(".task_status").val('done');

<% else %>
  $("<%= @class_name %>").css('background-color','#d3d3d3');
<% end %>
