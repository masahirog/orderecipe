<% if @reminder.category == "clean" %>
  $(".clear_reminder_<%= @reminder.id %>").html("<%= escape_javascript(render partial: 'reminders/td', locals: {reminder:@reminder}) %>");
  // $(".clear_reminder_<%= @reminder.id %>").children().replaceWith($lastAnimation);

<% else %>
  <% if @reminder.status == "yet" %>
    $("<%= @class_name %>").css('background-color','#ffffff');
  <% elsif  @reminder.status == "done" %>
    $("<%= @class_name %>").css('background-color','#d3d3d3');
    $("<%= @class_name %>").find(".reminder_status").val('done');
    $("<%= @class_name %>").find(".status_change_datetime").text("<%= @reminder.status_change_datetime.strftime('%H:%M') %>");
    <% if @reminder.important_status_before_type_cast == 1 %>
      $("<%= @class_name %>").find(".important_status").text("GOOD");
    <% elsif @reminder.important_status_before_type_cast == 2 %>
      $("<%= @class_name %>").find(".important_status").text("BAD");
    <% end %>
  <% else %>
    $("<%= @class_name %>").css('background-color','#d3d3d3');
  <% end %>
<% end %>
