      </div>
    </div>
    <div class="panel-body">
      <div>
        <br>　
      </div>

    <%= form_tag(:controller => "orders", :action => "new") do %>
      <% for i in 0..3 %>
        <%= render :partial => "new_form",locals: {i:i} %>
      <% end %>
      <div class="text-right col-md-10">
        <input type="button" onclick="submit();" value="発注計算" class="btn btn-success">
      </div>
    <% end %>
  </div>
</div>

