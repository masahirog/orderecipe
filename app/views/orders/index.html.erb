<div class="col-md-12">
  <h4><strong>過去の発注一覧</strong></h4>
</div>

<div class="col-md-12">
  <div class="col-md-1">
    ID
  </div>
  <div class="col-md-2">
    納品日
  </div>
</div>
<ul class="list-group">
  <% @orders.each do |order| %>
  	<li class="list-group-item col-md-12">
        <div class="orders_index col-md-1">
          <%= order.id %>
        </div>
        <div class="col-md-2">
          <%= order.delivery_date %>
        </div>
        <div class="col-md-2">
          <%= link_to "詳細", "/orders/#{order.id}", method: :get,class:"order btn btn-default" %>
        </div>
    </li>
  <% end %>
</ul>
<%= paginate @orders %>
